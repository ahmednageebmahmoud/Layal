@{
    ViewBag.Title = Token.Events;
    Layout = "~/Views/Shared/_Layout.cshtml";
    UsersPrivilegeVM
        Priv = new UsersPrivilegesBLL().SelectByUserId(PagesEnum.Events);

    bool IsCurrentUserAdmin = CookieService.UserInfo.AccountTypeId == (int)AccountTypeEnum.ProjectManager;
    bool IsCurrentUserBranchManger = CookieService.UserInfo.AccountTypeId == (int)AccountTypeEnum.BranchManager;

}

<!-- begin:: Content Head -->
<div class="kt-subheader   kt-grid__item" id="kt_subheader">
    <div class="kt-subheader__main">

        <span class="kt-subheader__separator kt-hidden"></span>
        <div class="kt-subheader__breadcrumbs">
            <a href="~/Home/Index" class="kt-subheader__breadcrumbs-home"><i class="flaticon-home"></i></a>
            <span class="kt-subheader__breadcrumbs-separator"></span>
            <a href="~/Home/Index" class="kt-subheader__breadcrumbs-link">
                @Token.HomePage
            </a>

            <span class="kt-subheader__breadcrumbs-separator"></span>
            <a href="javascript:void(0)" class="kt-subheader__breadcrumbs-link">
                @Token.Events
            </a>

            <!-- <span class="kt-subheader__breadcrumbs-link kt-subheader__breadcrumbs-link--active">Active link</span> -->
        </div>
    </div>

</div>

<!-- end:: Content Head -->
<!--Page Body-->
<div ng-controller="eventsCtrl">
    <div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content">
        <div class="kt-portlet kt-portlet--mobile">
            <div class="kt-portlet__head kt-portlet__head--lg">
                <div class="kt-portlet__head-label">
                    <span class="kt-portlet__head-icon">
                        <i class="kt-font-brand flaticon2-line-chart"></i>
                    </span>
                    <h3 class="kt-portlet__head-title">
                        @Token.Events
                    </h3>
                </div>
            </div>

            <div class="kt-portlet__body">
                <form novalidate name="eventFrm" class="kt-form kt-form--label-right" ng-submit="getEvents(true)">
                    <div class="kt-portlet__body">
                        <!--R O W 1-->
                        <div class="form-group  row">
                            <!--FirstName-->
                            <div class="col-lg-3 form-group-sub">
                                <label class="col-form-label">@Token.NameGroom</label>
                                <input type="text"
                                       class="form-control"
                                       ng-model="eventFilter.NameGroom" />
                            </div>

                            <!--LastName-->
                            <div class="col-lg-3 form-group-sub">
                                <label class="col-form-label">@Token.NameBride</label>
                                <input type="text"
                                       class="form-control"
                                       ng-model="eventFilter.NameBride" />
                            </div>

                            <!--IsNamesAr-->
                            <div class="col-lg-3 form-group-sub">
                                <label class="col-form-label">@Token.IsNamesAr</label>
                                <select class="form-control"
                                        serchbale
                                        ng-model="eventFilter.IsNamesAr"
                                        ng-options="c.Id as c.Name for c in checkBoxList"></select>
                            </div>

                            <!--IsClinetCustomLogo-->
                            <div class="col-lg-3 form-group-sub">
                                <label class="col-form-label">@Token.IsClinetCustomLogo</label>
                                <select class="form-control"
                                        serchbale
                                        ng-model="eventFilter.IsClinetCustomLogo"
                                        ng-options="c.Id as c.Name for c in checkBoxList"></select>
                            </div>
                        </div>
                        <!--R o w 2-->
                        <div class="form-group  row">
                            <!--IsLogoAr-->
                            <div class="col-lg-3 form-group-sub">
                                <label class="col-form-label">@Token.IsLogoAr</label>
                                <select class="form-control"
                                        serchbale
                                        ng-model="eventFilter.IsLogoAr"
                                        ng-options="c.Id as c.Name for c in checkBoxList"></select>
                            </div>
                            <!--IsActive-->
                            <div class="col-lg-3 form-group-sub">
                                <label class="col-form-label">@Token.IsActive</label>
                                <select class="form-control"
                                        serchbale
                                        ng-model="eventFilter.IsActive"
                                        ng-options="c.Id as c.Name for c in checkActiveList"></select>
                            </div>
                            <!--PackageId-->
                            <div class="col-lg-3 form-group-sub">
                                <label class="col-form-label">@Token.Package</label>
                                <select class="form-control"
                                        serchbale
                                        ng-model="eventFilter.PackageId"
                                        ng-options="c.Id as c.PackageName for c in packages"></select>
                            </div>
                            <!--Branch-->
                            <div class="col-lg-3 form-group-sub">
                                <label class="col-form-label">@Token.Branch</label>
                                <select class="form-control"
                                        serchbale
                                        ng-model="eventFilter.BranchId"
                                        ng-options="c.Id as c.BranchName for c in branches"></select>
                            </div>
                        </div>

                        <div class="form-group  row">
                            <!--CreateDateFrom-->
                            <div class="col-lg-3 form-group-sub">
                                <label class="col-form-label">@Token.CreateDateFrom</label>
                                <input type="date"
                                       class="form-control"
                                       id="createDateFrom"
                                       ng-model="eventFilter.CreateDateFrom" />
                            </div>
                            <!--CreateDateTo-->
                            <div class="col-lg-3 form-group-sub">
                                <label class="col-form-label">@Token.CreateDateTo</label>
                                <input type="date"
                                       class="form-control"
                                       id="createDateTo"
                                       ng-model="eventFilter.CreateDateTo" />
                            </div>

                            <!--EventDateTimeFrom-->
                            <div class="col-lg-3 form-group-sub">
                                <label class="col-form-label">@Token.EventDateFrom</label>
                                <input type="date"
                                       class="form-control"
                                       id="eventDateTimeFrom"
                                       ng-model="eventFilter.EventDateTimeFrom" />
                            </div>
                            <!--EventDateTimeTo-->
                            <div class="col-lg-3 form-group-sub">
                                <label class="col-form-label">@Token.EventDateTo</label>
                                <input type="date"
                                       class="form-control"
                                       id="eventDateTimeTo"
                                       ng-model="eventFilter.EventDateTimeTo" />
                            </div>
                        </div>
                    </div>

                    <!--R O W 4-->
                    <div class="row">
                        <div class="col-lg-10"></div>
                        <div class="col-lg-2">
                            <button type="submit" class="btn btn-brand btn-elevate btn-elevate-air">
                                <i class="la la-search">@Token.Show</i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="kt-portlet__body">
                <div class="kt-portlet__body">
                    @if (Priv.CanDisplay)
                    {
                        <table class="table sms-table  "
                               datatable="ng"
                               dt-options="vm.dtOptions"
                               dt-instance="vm.dtInstance"
                               dt-column-defs="vm.dtColumnDefs"
                               id="ng_table_1">
                            <thead class="">
                                <tr class="">
                                    <th class="th-10">
                                        <sms-sort ng-sms-fop="enquiyFOP"
                                                  ng-sms-field-name="NameGroom"
                                                  ng-sms-resource="@Token.NameGroom"></sms-sort>
                                    </th>
                                    <th class="th-10">
                                        <sms-sort ng-sms-fop="enquiyFOP"
                                                  ng-sms-field-name="NameGroom"
                                                  ng-sms-resource="@Token.NameGroom"></sms-sort>
                                    </th>
                                    <th class="th-10">
                                        <sms-sort ng-sms-fop="enquiyFOP"
                                                  ng-sms-field-name="IsClinetCustomLogo"
                                                  ng-sms-resource="@Token.IsClinetCustomLogo"></sms-sort>
                                    </th>

                                    <th class="th-10">
                                        <sms-sort ng-sms-fop="enquiyFOP"
                                                  ng-sms-field-name="PackageName"
                                                  ng-sms-resource="@Token.Package"></sms-sort>
                                    </th>
                                    <th class="th-10">
                                        <sms-sort ng-sms-fop="enquiyFOP"
                                                  ng-sms-field-name="PrintNamesTypeName"
                                                  ng-sms-resource="@Token.PrintNamesType"></sms-sort>
                                    </th>
                                    <th class="th-10">
                                        <sms-sort ng-sms-fop="enquiyFOP"
                                                  ng-sms-field-name="BranchName"
                                                  ng-sms-resource="@Token.Branch"></sms-sort>
                                    </th>
                                    <th class="th-10">
                                        <sms-sort ng-sms-fop="enquiyFOP"
                                                  ng-sms-field-name="EventDateTimeDisplay"
                                                  ng-sms-resource="@Token.EventDateTime"></sms-sort>
                                    </th>
                                    <th class="th-10">
                                        <sms-sort ng-sms-fop="enquiyFOP"
                                                  ng-sms-field-name="CreateDateTimeDisplay"
                                                  ng-sms-resource="@Token.CreateDateTime"></sms-sort>
                                    </th>
                                    <th class="th-10">
                                        <sms-sort ng-sms-fop="enquiyFOP"
                                                  ng-sms-field-name="IsActive"
                                                  ng-sms-resource="@Token.IsActive"></sms-sort>
                                    </th>
                                    <th class="th-10">
                                        @Token.Operations
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="x in events|filter:eventsSearch |orderBy:enquiyFOP.sort.propName:enquiyFOP.sort.reverse | limitTo:enquiyFOP.paging.pagingLimt.take:enquiyFOP.paging.pagingLimt.skip track by $index">
                                    <td>{{x.NameGroom}}</td>
                                    <td>{{x.NameGroom}}</td>
                                    <td><i class="fas " ng-class="{'fa-check':x.IsClinetCustomLogo}"></i></td>
                                    <td>{{x.Package.PackageName}}</td>
                                    <td>{{x.PrintNameType.PrintNamesTypeName}}</td>
                                    <td>{{x.Branch.BranchName}}</td>
                                    <td>{{x.EventDateTimeDisplay}}</td>
                                    <td>{{x.CreateDateTimeDisplay}}</td>
                                    <td>
                                        <span class="kt-switch kt-switch--outline kt-switch--icon kt-switch--success">
                                            <label>
                                                <input type="checkbox" checked="checked" ng-model="x.IsActive"
                                                        name="" class="ng-pristine ng-untouched ng-valid ng-not-empty"
                                                       ng-disabled="x.EnquiryIsClosed"
                                                       ng-change="changeEventActiveStatus(x.IsActive)">
                                                <span></span>
                                            </label>
                                        </span>
                                    </td>
                                    <td>
                                        <!--Btn:Edit-->
                                        @if (Priv.CanEdit)
                                        {
                                            <a href="/Events/AddAndUpdate?id={{x.Id}}" title="@Token.Update" class="btn btn-sm btn-clean btn-icon btn-icon-md"
                                                       ng-hide="x.EnquiryIsClosed||!x.IsActive"
                                               ><i class="la la-edit"></i></a>
                                        }

                                        <a href="/Events/DistributionOfWork?id={{x.Id}}"
                                            title="@Token.DistributionOfWork" 
                                           class="btn btn-sm btn-clean btn-icon btn-icon-md"
                                           ng-hide="x.EnquiryIsClosed||!x.IsActive"><i class="fas fa-users-cog"></i></a>

                                        <a href="/Events/EventsInformation?id={{x.Id}}" title="@Token.ShowDetails" class="btn btn-sm btn-clean btn-icon btn-icon-md" target="_blank"><i class="la la-search"></i> </a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    }
                    <!--Paging -->
                    <sms-paging ng-sms-fop="enquiyFOP" ng-sms-display-m-func="getEvents()"></sms-paging>
                </div>
            </div>
        </div>
    </div>


    <!--addStatus-->
    <div id="addStatus"
         class="modal fade" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">@Token.Details</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form novalidate name="eventStatus" class="kt-form kt-form--label-right" ng-submit="addNewStatus(eventStatus)">
                        <!--R O W 1-->
                        <div class="form-group  row">
                            <!--Status-->
                            <label class="col-lg-2 col-form-label">@Token.Status</label>
                            <div class="col-lg-3 form-group-sub">
                                <select name="status"
                                        class="form-control"
                                        ng-class="{'is-invalid':eventStatus.status.$invalid&&enquiytStusSubmitErro}"
                                        ng-model="eventNewStatus.StatusId"
                                        ng-required="true"
                                        ng-options="x.Id  as x.Name for x in eventStatusTypes"></select>

                                <!--Errors:-->
                                <small class="error invalid-feedback" ng-if="eventStatus.status.$error.required&&enquiytStusSubmitErro">@Token.FieldIsRequierd</small>
                            </div>
                            <!--Notes-->
                            <label class="col-lg-2 col-form-label">@Token.Notes</label>
                            <div class="col-lg-5 form-group-sub">
                                <textarea type="text"
                                          name="notes"
                                          class="form-control"
                                          ng-class="{'is-invalid':eventStatus.notes.$invalid&&enquiytStusSubmitErro}"
                                          ng-model="eventNewStatus.Notes"
                                          maxlength="4000"
                                          rows="6"></textarea>

                                <!--Errors:-->
                                <small class="error invalid-feedback" ng-if="eventStatus.notes.$error.maxlength&&enquiytStusSubmitErro">@Token.MaxLengthCharIs 4000</small>
                            </div>
                        </div>


                        <!--R O W 2-->
                        @*if (IsCurrentUserAdmin)
                            {
                                    تم ايقاف هذة لانة يتم وضعها فى الكود افضل وتم تركها لتكون جاهزة لا اكثر
                            <div class="form-group  row" ng-if="eventStatusTypesEnum.rejectService==eventNewStatus.StatusId">
                                <!--IsClosed-->
                                <label class="col-lg-2 col-form-label">@Token.Close</label>
                                <div class="col-lg-4 form-group-sub">
                                    <span class="kt-switch kt-switch--outline kt-switch--icon kt-switch--success">
                                        <label>
                                            <input type="checkbox"
                                                   ng-model="eventNewStatus.IsClosed" name="" class="ng-pristine ng-untouched ng-valid ng-not-empty">
                                            <span></span>
                                        </label>
                                    </span>
                                </div>
                            </div>
                            }*@

                        <!--schedule Visit-->
                        <div class="form-group  row" ng-show="eventStatusTypesEnum.scheduleVisit==eventNewStatus.StatusId">
                            <!--VisitDateTime-->
                            <label class="col-lg-2 col-form-label">@Token.VisitDateTime</label>
                            <div class="col-lg-4 form-group-sub">
                                <input type="datetime-local"
                                       name="dateTim"
                                       class="form-control"
                                       ng-class="{'is-invalid':eventStatus.dateTim.$invalid&&enquiytStusSubmitErro}"
                                       ng-model="eventNewStatus.ScheduleVisitDateTime"
                                       ng-required="eventStatusTypesEnum.scheduleVisit==eventNewStatus.StatusId" />
                                <!--Errors-->
                                <small class="error invalid-feedback" ng-if="eventStatus.dateTim.$error.required&&enquiytStusSubmitErro">@Token.FieldIsRequierd</small>
                                <small class="error invalid-feedback" ng-if="!eventStatus.dateTim.$error.required&&eventStatus.dateTim.$invalid&&enquiytStusSubmitErro">@Token.InvalidData</small>
                            </div>
                        </div>

                        <!--Desire To Book-->
                        <div class="form-group  row" ng-show="eventStatusTypesEnum.desireToBook==eventNewStatus.StatusId">
                            <!--Bank Transfer Deposit-->
                            <label class="col-lg-2 col-form-label">@Token.BankTransferDeposit</label>
                            <div class="col-lg-3 form-group-sub">
                                <span class="kt-switch kt-switch--outline kt-switch--icon kt-switch--success">
                                    <label>
                                        <input type="checkbox"
                                               checked="checked"
                                               ng-model="eventNewStatus.IsBankTransferDeposit" name="" class="ng-pristine ng-untouched ng-valid ng-not-empty">
                                        <span></span>
                                    </label>
                                </span>
                            </div>

                            <!--Amount-->
                            <label class="col-lg-2 col-form-label" ng-show="!eventNewStatus.IsBankTransferDeposit">@Token.Amount</label>
                            <div class="col-lg-5 form-group-sub" ng-show="!eventNewStatus.IsBankTransferDeposit">
                                <input type="number"
                                       name="amount"
                                       class="form-control"
                                       ng-class="{'is-invalid':eventStatus.amount.$invalid&&enquiytStusSubmitErro}"
                                       ng-model="eventNewStatus.Amount"
                                       ng-required="!eventNewStatus.BankTransferDeposit&&eventStatusTypesEnum.desireToBook==eventNewStatus.StatusId" />
                                <!--Errors-->
                                <small class="error invalid-feedback" ng-if="eventStatus.amount.$error.required&&enquiytStusSubmitErro">@Token.FieldIsRequierd</small>
                            </div>
                        </div>
                        <div class="kt-portlet__foot">
                            <div class="kt-form__actions">
                                <div class="row">
                                    <div class="col-lg-10"></div>
                                    <div class="col-lg-2">
                                        <button type="submit" class="btn btn-brand btn-elevate btn-elevate-air">
                                            <i class="la la-save">@Token.Add</i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">@Token.Close</button>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts{

    <!--(ANageeb) link angualr files for thsis  view -->
    <script src="~/Scripts/angularJS/views/events/index/service.js"></script>
    <script src="~/Scripts/angularJS/views/events/index/contoller.js"></script>
}
