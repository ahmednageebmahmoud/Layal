@{
    ViewBag.Title = Token.UserInformation;
    Layout = "~/Views/Shared/_Layout.cshtml";
    UsersPrivilegeVM Priv =
        new UsersPrivilegesBLL().SelectByUserId(PagesEnum.UserInformation);

}

<div class="kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor" ng-controller="usersCtrl">
    <!-- begin:: Subheader -->
    <div class="kt-subheader   kt-grid__item" id="kt_subheader">
        <div class="kt-subheader__main">
            <span class="kt-subheader__separator kt-hidden"></span>
            <div class="kt-subheader__breadcrumbs">
                <a href="~/Home/Index" class="kt-subheader__breadcrumbs-home"><i class="flaticon-home"></i></a>

                <span class="kt-subheader__breadcrumbs-separator"></span>
                <a href="~/Home/Index" class="kt-subheader__breadcrumbs-link"> @Token.HomePage </a>

                <span class="kt-subheader__breadcrumbs-separator"></span>
                <a href="~/Users" class="kt-subheader__breadcrumbs-link"> @Token.Users </a>


                <span class="kt-subheader__breadcrumbs-separator"></span>
                <a href="javascript:void(0)" class="kt-subheader__breadcrumbs-link">@Token.UserInformation</a>

                <!-- <span class="kt-subheader__breadcrumbs-link kt-subheader__breadcrumbs-link--active">Active link</span> -->
            </div>
        </div>

    </div>
    <!-- end:: Subheader -->
    <div class="kt-content  kt-grid__item kt-grid__item--fluid">
        <div class="row">
            <div class="col-lg-12">
                <!--AddUser-->
                <div class="kt-portlet">
                    <div class="kt-portlet__head">
                        <div class="kt-portlet__head-label">
                            <span class="kt-portlet__head-icon">
                                <i class="kt-font-brand flaticon-add"></i>
                            </span>
                            <h3 class="kt-portlet__head-title">@Token.UserInformation</h3>

                        </div>

                    </div>
                    <!--AddUser Form-->
                    <form novalidate name="userFrm" class="kt-form kt-form--label-right" ng-submit="saveChange(userFrm,User)">
                        <div class="kt-portlet__body">
                            <!--R O W 1-->
                            <div class="form-group  row">
                                <!--UerName-->
                                <label class="col-form-label col-lg-2">@Token.UserName</label>
                                <div class="col-lg-4 form-group-sub">
                                    <input type="text"
                                           name="userName"
                                           disabled
                                           class="form-control  input-disabled"
                                           ng-model="user.UserName"
                                           maxlength="50"
                                           ng-required="true" />
                                </div>
                                <!--Email-->
                                <label class="col-form-label col-lg-2">@Token.Email</label>
                                <div class="col-lg-4 form-group-sub">
                                    <input type="email"
                                           name="email"
                                           disabled
                                           class="form-control  input-disabled"
                                           maxlength="50"
                                           ng-model="user.Email" />
                                </div>
                            </div>
                            <!--R O W 2-->
                            <div class="form-group  row">
                                <!--FullName-->
                                <label class="col-form-label col-lg-2">@Token.FullName</label>
                                <div class="col-lg-4 form-group-sub">
                                    <input type="text"
                                           name="fullName"
                                           disabled
                                           class="form-control input-disabled"
                                           ng-model="user.FullName"
                                             />
                                </div>

                                <!--NationalityNumber-->
                                <label class="col-form-label col-lg-2">@Token.NationalityNumber</label>
                                <div class="col-lg-4 form-group-sub">
                                    <input type="text"
                                           name="nationalityNumber"
                                           disabled
                                           class="form-control input-disabled"
                                           ng-model="user.NationalityNumber"
                                            />
                                </div>
                            </div>

                            <!--R O W 3-->
                            <div class="form-group  row">
                                <!--PhoneNumber-->
                                <label class="col-form-label col-lg-2">@Token.PhoneNumber</label>
                                <div class="col-lg-4 form-group-sub">
                                    <input type="text"
                                           name="phoneNo"
                                           disabled
                                           class="form-control  input-disabled"
                                           ng-model="user.PhoneNo"
                                           pattern="[0-9]{1,14}" />
                                </div>
                                <!--Address-->
                                <label class="col-form-label col-lg-2">@Token.Address</label>
                                <div class="form-group-sub col-lg-4">
                                    <textarea type="text"
                                              name="address"
                                              disabled
                                              class="form-control  input-disabled"
                                              ng-model="user.Address"
                                              rows="3"
                                              maxlength="250"></textarea>
                                </div>
                            </div>

                            <!--R O W 4-->
                            <div class="form-group  row">
                                <!--AccountTypes-->
                                <label class="col-form-label col-lg-2">@Token.AccountType</label>
                                <div class="col-lg-4 form-group-sub">
                                    <select class="form-control  input-disabled"
                                            name="accountType"
                                            disabled
                                            ng-model="user.AccountTypeId"
                                            ng-options="c.Id as c.AccountTypeName for c in accountTypes"
                                            ng-required="true"></select>
                                </div>
                                <!--Language-->
                                <label class="col-form-label col-lg-2">@Token.Language</label>
                                <div class="col-lg-4 form-group-sub">
                                    <select class="form-control  input-disabled"
                                            name="language"
                                            disabled
                                            ng-model="user.LanguageId"
                                            ng-options="c.Id as c.LanguageName for c in languages"
                                            ng-required="true"></select>
                                </div>
                            </div>

                            <!--R O W 5-->
                            <div class="form-group  row">

                                <!--Country-->
                                <label class="col-form-label col-lg-2">@Token.Country</label>
                                <div class="col-lg-4 form-group-sub">
                                    <select class="form-control  input-disabled"
                                            name="country"
                                            disabled
                                            ng-model="user.CountryId"
                                            ng-options="c.Id as c.CountryName for c in countries"></select>
                                </div>

                                <!--City-->
                                <label class="col-form-label col-lg-2">@Token.City</label>
                                <div class="col-lg-4 form-group-sub">
                                    <select class="form-control  input-disabled"
                                            name="city"
                                            disabled
                                            ng-model="user.CityId"
                                            ng-options="c.Id as c.CityName for c in cities|filter:{'CountryId':user.CountryId}"></select>
                                </div>
                            </div>

                            <!--R O W 6-->
                            <div class="form-group  row">
                                <!--WebSite-->
                                <label class="col-form-label col-lg-2">@Token.WebSite</label>
                                <div class="col-lg-4 form-group-sub">
                                    <input type="url"
                                           name="webSite"
                                           disabled
                                           class="form-control input-disabled"
                                           ng-model="user.WebSite"
                                           />
                                </div>
                                <!--DateOfBirth-->
                                <label class="col-form-label col-lg-2">@Token.DateOfBirth</label>
                                <div class="form-group-sub">
                                    <input type="text"
                                           name="dateOfBirth"
                                           class="form-control   input-disabled"
                                           ng-model="user.DateOfBirthDisplay"
                                           disabled />
                                    <!--Errors:-->
                                </div>
                            </div>


                            <div class="form-group row">
                                <label class="col-form-label col-lg-2">@Token.SocialMedaiAccounts</label>
                                <div class="col-lg-10 form-group-sub">
                                    <table class="table sms-table table-bordered">
                                        <thead>
                                            <tr>
                                                <th class="th-45"><span class="sms-sort-field">@Token.SocialAccountType</span></th>
                                                <th class="th-45"><span class="sms-sort-field">@Token.Link</span></th>
                                                <th class="th-10"><span class="sms-sort-field">@Token.Operations</span></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="n in user.SocialAccounts">
                                                <td>
                                              {{n.SocialAccountType.SocialAccountTypeName}}
                                                </td>
                                                <td><p><a href="{{n.Link}}" class="kt-link kt-font-boldest ng-binding">{{n.Link}}</a></p></td>
                                                <td>
                                                    <a href="javascript:void(0);"  title="@Token.Delete" class="btn btn-sm btn-clean btn-icon btn-icon-md" ng-click="deleteSocailAccount(n)" data-skin="dark" data-toggle="kt-tooltip" data-placement="top"><i class="la la-trash"></i> </a>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                </div>
                        </div>
                    </form>
                </div>

                <!--end::Portlet-->
            </div>
        </div>
    </div>

</div>
@section scripts{
    <!--(ANageeb) link angualr files for thsis  view -->
    <script src="~/Scripts/angularJS/views/users/display/service.js"></script>
    <script src="~/Scripts/angularJS/views/users/display/contoller.js"></script>
}