
@{
    ViewBag.Title = Token.AddNewPackage;
    Layout = "~/Views/Shared/_Layout.cshtml";
    UsersPrivilegeVM Priv =
        new UsersPrivilegesBLL().SelectByUserId(PagesEnum.Packages);

}
<div class="kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor" ng-controller="addAUpdatePackagesCtrl">
    <!-- begin:: Subheader -->
    <div class="kt-subheader   kt-grid__item" id="kt_subheader">
        <div class="kt-subheader__main">
            <span class="kt-subheader__separator kt-hidden"></span>
            <div class="kt-subheader__breadcrumbs">
                <a href="~/Home/Index" class="kt-subheader__breadcrumbs-home"><i class="flaticon-home"></i></a>

                <span class="kt-subheader__breadcrumbs-separator"></span>
                <a href="~/Home/Index" class="kt-subheader__breadcrumbs-link"> @Token.HomePage </a>

                <span class="kt-subheader__breadcrumbs-separator"></span>
                <a href="~/Packages" class="kt-subheader__breadcrumbs-link"> @Token.Packages </a>


                <span class="kt-subheader__breadcrumbs-separator"></span>
                <a href="javascript:void(0)" class="kt-subheader__breadcrumbs-link" ng-if="package.State==state.create">@Token.AddNewPackage</a>
                <a href="javascript:void(0)" class="kt-subheader__breadcrumbs-link" ng-if="package.State==state.update">@Token.UpdatePackage</a>
                <!-- <span class="kt-subheader__breadcrumbs-link kt-subheader__breadcrumbs-link--active">Active link</span> -->
            </div>
        </div>

    </div>

    <!-- end:: Subheader -->


    <div class="kt-content  kt-grid__item kt-grid__item--fluid">
        <div class="row">
            <div class="col-lg-12">
                <!--Package-->
                <div class="kt-portlet">
                    <div class="kt-portlet__head">
                        <div class="kt-portlet__head-label">
                            <span class="kt-portlet__head-icon">
                                <i class="kt-font-brand flaticon-add"></i>
                            </span>
                            <h3 class="kt-portlet__head-title" ng-if="package.State!=state.update">@Token.AddNewPackage</h3>
                            <h3 class="kt-portlet__head-title" ng-if="package.State==state.update">@Token.UpdatePackage</h3>
                        </div>
                    </div>
                    <!--Package Form-->
                    <form novalidate name="addPackageFrm" class="kt-form kt-form--label-right"
                          ng-submit="packageOpration.saveChange(addPackageFrm)">
                        <div class="kt-portlet__body">
                            <!--R O W 1-->
                            <div class="form-group row">
                                <!--NameAr-->
                                <label class="col-form-label col-lg-2">@Token.NameAr</label>
                                <div class="col-lg-4 form-group-sub">
                                    <input type="text" class="form-control input-disabled  " name="nameAr"
                                           ng-class="{'is-invalid':addPackageFrm.nameAr.$invalid&&packageFrmErrorSubmit}"
                                           ng-model="package.NameAr" ng-required="true" ng-maxlength="50" maxlength="50">
                                    <!--Errors:NameAr-->
                                    <div class="error invalid-feedback" ng-if="addPackageFrm.nameAr.$error.required&&packageFrmErrorSubmit">@Token.FieldIsRequierd</div>
                                    <div class="error invalid-feedback" ng-if="addPackageFrm.nameAr.$error.maxlength&&packageFrmErrorSubmit">@Token.MaxLengthCharIs 50</div>
                                </div>

                                <!--NameEn-->
                                <label class="col-form-label col-lg-2">@Token.NameEn</label>
                                <div class="col-lg-4 form-group-sub">
                                    <input type="text" class="form-control input-disabled" name="nameEn"
                                           ng-class="{'is-invalid':addPackageFrm.nameEn.$invalid&&packageFrmErrorSubmit}"
                                           ng-model="package.NameEn" ng-required="true" ng-maxlength="50" maxlength="50">
                                    <!--Errors:NameEn-->
                                    <div class="error invalid-feedback" ng-if="addPackageFrm.nameEn.$error.required&&packageFrmErrorSubmit">@Token.FieldIsRequierd</div>
                                    <div class="error invalid-feedback" ng-if="addPackageFrm.nameEn.$error.maxlength&&packageFrmErrorSubmit">@Token.MaxLengthCharIs 50</div>
                                </div>
                            </div>

                            <!--R O W 2-->
                            <div class="form-group row">
                                <!--DescriptionAr-->
                                <label class="col-form-label col-lg-2">@Token.DescriptionAr</label>
                                <div class="col-lg-4 form-group-sub">
                                    <textarea class="form-control"
                                              name="descriptionAr"
                                              ng-class="{'is-invalid':addPackageFrm.descriptionAr.$invalid&&packageFrmErrorSubmit}"
                                              ng-model="package.DescriptionAr"
                                              ng-maxlength="4000"
                                              maxlength="4000"
                                              rows="4"
                                              ng-required="true"></textarea>
                                    <!--Errors-->
                                    <div class="error invalid-feedback" ng-if="addPackageFrm.descriptionAr.$error.required&&packageFrmErrorSubmit">@Token.FieldIsRequierd</div>
                                    <div class="error invalid-feedback" ng-if="addPackageFrm.descriptionAr.$error.maxlength&&packageFrmErrorSubmit">@Token.MaxLengthCharIs 4000</div>
                                </div>

                                <!--DescriptionEn-->
                                <label class="col-form-label col-lg-2">@Token.DescriptionEn</label>
                                <div class="col-lg-4 form-group-sub">
                                    <textarea class="form-control"
                                              name="descriptionEn"
                                              ng-class="{'is-invalid':addPackageFrm.descriptionEn.$invalid&&packageFrmErrorSubmit}"
                                              ng-model="package.DescriptionEn"
                                              ng-maxlength="4000"
                                              maxlength="4000"
                                              rows="4"
                                              ng-required="true"></textarea>
                                    <!--Errors-->
                                    <div class="error invalid-feedback" ng-if="addPackageFrm.descriptionEn.$error.required&&packageFrmErrorSubmit">@Token.FieldIsRequierd</div>
                                    <div class="error invalid-feedback" ng-if="addPackageFrm.descriptionEn.$error.maxlength&&packageFrmErrorSubmit">@Token.MaxLengthCharIs 4000</div>
                                </div>
                            </div>

                            <!--R O W 3-->
                            <div class="form-group row">
                                <!--Album-->
                                <label class="col-form-label col-lg-2">@Token.Album</label>
                                <div class="col-lg-4 form-group-sub">
                                    <select class="form-control"
                                            serchbale
                                            name="albumTypeId"
                                            ng-class="{'is-invalid':addPackageFrm.albumTypeId.$invalid&&packageFrmErrorSubmit}"
                                            ng-model="package.AlbumTypeId"
                                            ng-options="c.Id as c.AlbumTypeName for c in albumsTypes"
                                            ng-required="true"></select>
                                    <!--Errors:-->
                                    <small class="error invalid-feedback" ng-if="addPackageFrm.albumTypeId.$error.required&&packageFrmErrorSubmit">@Token.FieldIsRequierd</small>
                                </div>

                                <!--IsPrintNamesFree-->
                                <label class="col-form-label col-lg-2">@Token.IsNamesPrintingFree</label>
                                <div class="col-lg-4 form-group-sub">
                                    <span class="kt-switch kt-switch--outline kt-switch--icon kt-switch--success">
                                        <label>
                                            <input type="checkbox" checked="checked" ng-model="package.IsPrintNamesFree" name="" class="ng-pristine ng-untouched ng-valid ng-not-empty" />
                                            <span></span>
                                        </label>
                                    </span>
                                </div>
                            </div>

                            <!--R O W 4-->
                            <div class="form-group row">
                                <!--Album-->
                                <label class="col-form-label col-lg-2">@Token.PackagePrice</label>
                                <div class="col-lg-4 form-group-sub">
                                    <input type="number"
                                           class="form-control"
                                           name="price"
                                           min="1"
                                           ng-class="{'is-invalid':addPackageFrm.price.$invalid&&packageFrmErrorSubmit}"
                                           ng-model="package.Price"
                                           ng-required="true" />
                                    <!--Errors:-->
                                    <small class="error invalid-feedback" ng-if="addPackageFrm.price.$error.required&&packageFrmErrorSubmit">@Token.FieldIsRequierd</small>
                                    <small class="error invalid-feedback" ng-if="addPackageFrm.price.$error.min&&packageFrmErrorSubmit">@Token.MinNumberIs 1 </small>
                                </div>

                                <!--NamsArExtraPrice-->
                                <label class="col-form-label col-lg-2">@Token.NamsArExtraPrice</label>
                                <div class="col-lg-4 form-group-sub">
                                    <input type="number"
                                           class="form-control"
                                           name="namsArExtraPrice"
                                           min="1"
                                           ng-class="{'is-invalid':addPackageFrm.namsArExtraPrice.$invalid&&packageFrmErrorSubmit}"
                                           ng-model="package.NamsArExtraPrice"
                                           ng-required="package.IsAllowPrintNames" />
                                    <!--Errors:-->
                                    <small class="error invalid-feedback" ng-if="addPackageFrm.namsArExtraPrice.$error.required&&packageFrmErrorSubmit">@Token.FieldIsRequierd</small>
                                    <small class="error invalid-feedback" ng-if="addPackageFrm.namsArExtraPrice.$error.min&&packageFrmErrorSubmit">@Token.MinNumberIs 1 </small>

                                </div>
                            </div>
                        </div>
                        <div class="kt-portlet__foot">
                            <div class="kt-form__actions">
                                <div class="row">
                                    <div class="col-lg-9"></div>
                                    <div class="col-lg-3">
                                        @if (Priv.CanEdit)
                                        {

                                            <button type="submit" class="btn btn-brand btn-elevate btn-elevate-air"
                                                    ng-if="package.State==state.update">
                                                <i class="la la-save">@Token.Save</i>
                                            </button>
                                        }
                                        @if (Priv.CanAdd)
                                        {
                                            <button type="submit" class="btn btn-brand btn-elevate btn-elevate-air"
                                                    ng-if="package.State!=state.update">
                                                <i class="la la-save">@Token.Add</i>
                                            </button>

                                        }
                                        <button type="reset" class="btn btn-warning btn-elevate btn-elevate-air" ng-if="package.State!=state.update"><i class="la la-file">@Token.Cancel</i></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>

                <!--Package Details-->
                <div class="kt-portlet">
                    <div class="kt-portlet__head">
                        <div class="kt-portlet__head-label">
                            <h3 class="kt-portlet__head-title">@Token.PackageDetails</h3>
                        </div>
                    </div>

                    <!--PackageDeail Form-->
                    <form novalidate name="addPackageDeailFrm" ng-if="package.State==state.update">
                        <!--Package Items-->
                        <div class="kt-portlet__body">

                            <div class="form-group  row">
                                <table class="table sms-table">
                                    <thead>
                                        <tr role="row">
                                            <th class="th-30 ">
                                                <label class="sms-sort-field">
                                                    @Token.Input
                                                </label>
                                            </th>
                                            <th class="th-30">
                                                <label class="sms-sort-field">
                                                    @Token.ValueAr
                                                </label>
                                            </th>
                                            <th class="th-30">
                                                <label class="sms-sort-field">
                                                    @Token.ValueEn
                                                </label>
                                            </th>
                                            <th class="th-10">
                                                <label class="sms-sort-field">
                                                    @Token.Operations
                                                </label>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <!--Create-->
                                        @if (Priv.CanAdd)
                                        {
                                            <tr>
                                                <td>
                                                    <select class="form-control"
                                                            serchbale
                                                            name="albumTypeId"
                                                            ng-class="{'is-invalid':addPackageFrm.albumTypeId.$invalid&&packageFrmErrorSubmit}"
                                                            ng-model="packageDeail.PackageInputTypeId"
                                                            ng-options="c.Id as c.PackageInputTypeName for c in packageInputTypes"
                                                            ng-required="true"></select>
                                                    <!--Errors-->
                                                    <small class="help-block" ng-if="packageDeail.PackageInputTypeIdIsRequired&&erroAddNewItem">@Token.FieldIsRequierd</small>
                                                </td>
                                                <td>
                                                    <input type="text" class="form-control input-disabled"
                                                           ng-model="packageDeail.ValueAr">
                                                    <!--Errors: -->
                                                    <div>
                                                        <small class="help-block" ng-if="packageDeail.ValueArIsRequired&&propertyIsFalthy(packageDeail.ValueAr,packageDeail.ValueArIsRequired)&&erroAddNewItem">@Token.FieldIsRequierd</small>
                                                        <small class="help-block" ng-if="packageDeail.ValueArIsMaxlength||propertyIsMaxLength(packageDeail.ValueAr,50)&&erroAddNewItem">@Token.MaxLengthCharIs 50</small>
                                                    </div>
                                                </td>
                                                <td>
                                                    <input type="text" class="form-control input-disabled"
                                                           ng-model="packageDeail.ValueEn">
                                                    <!--Errors: -->
                                                    <div>
                                                        <small class="help-block" ng-if="packageDeail.ValueEnIsRequired&&propertyIsFalthy(packageDeail.ValueEn,packageDeail.ValueEnIsRequired)&&erroAddNewItem">@Token.FieldIsRequierd</small>
                                                        <small class="help-block" ng-if="packageDeail.ValueEnIsMaxlength||propertyIsMaxLength(packageDeail.ValueEn,50)&&erroAddNewItem">@Token.MaxLengthCharIs 50</small>
                                                    </div>
                                                </td>
                                                <td>
                                                    <!--Btn:Added New-->
                                                    <a href="javascript:void(0);" data-skin="dark" data-toggle="kt-tooltip" data-placement="top"  title="@Token.Add"
                                                       class="btn btn-sm btn-clean btn-icon btn-icon-md" ng-click="packageItemOpration.addNew(packageDeail,package)"><i class="la la-plus-square"></i></a>
                                                </td>
                                            </tr>
                                        }
                                        <tr ng-repeat="gp in package.PackageDetails">
                                            <td>
                                                <select class="form-control input-disabled"
                                                        ng-model="gp.PackageInputTypeId"
                                                        ng-options="c.Id as c.PackageInputTypeName for c in packageInputTypes"
                                                        ng-disabled="true"></select>

                                            </td>
                                            <td>
                                                {{gp.ValueAr}}
                                            </td>
                                            <td>
                                                {{gp.ValueEn}}
                                            </td>
                                            <td>
                                                <!--Btn:Delete-->
                                                @if (Priv.CanDelete)
                                                {
                                                    <a href="javascript:void(0);" ng-click="packageItemOpration.delete(gp)" ng-if="gp.Id!=itemEditId" data-skin="dark" data-toggle="kt-tooltip" data-placement="top"  title="@Token.Delete" class="btn btn-sm btn-clean btn-icon btn-icon-md"><i class="la la-trash"></i> </a>
                                                }
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </form>
                </div>
                <!--end::Portlet-->
            </div>
        </div>
    </div>

</div>
@section scripts{
    <!--(ANageeb) link angualr files for thsis  view -->
    <script src="~/Scripts/angularJS/views/packages/addAndUpdate/service.js"></script>
    <script src="~/Scripts/angularJS/views/packages/addAndUpdate/contoller.js"></script>
}