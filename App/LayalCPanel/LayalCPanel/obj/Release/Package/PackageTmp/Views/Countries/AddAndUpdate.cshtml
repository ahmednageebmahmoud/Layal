
@{
    ViewBag.Title = Token.AddNewCountry;
    Layout = "~/Views/Shared/_Layout.cshtml";
    UsersPrivilegeVM Priv =
        new UsersPrivilegesBLL().SelectByUserId(PagesEnum.Countries);

}
<div class="kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor" ng-controller="addAUpdateCountriesCtrl">
    <!-- begin:: Subheader -->
    <div class="kt-subheader   kt-grid__item" id="kt_subheader">
        <div class="kt-subheader__main">
            <span class="kt-subheader__separator kt-hidden"></span>
            <div class="kt-subheader__breadcrumbs">
                <a href="~/Home/Index" class="kt-subheader__breadcrumbs-home"><i class="flaticon-home"></i></a>

                <span class="kt-subheader__breadcrumbs-separator"></span>
                <a href="~/Home/Index" class="kt-subheader__breadcrumbs-link"> @Token.HomePage </a>

                <span class="kt-subheader__breadcrumbs-separator"></span>
                <a href="~/Countries" class="kt-subheader__breadcrumbs-link"> @Token.Countries </a>


                <span class="kt-subheader__breadcrumbs-separator"></span>
                <a href="javascript:void(0)" class="kt-subheader__breadcrumbs-link" ng-if="newCountry.State==state.create">@Token.AddNewCountry</a>
                <a href="javascript:void(0)" class="kt-subheader__breadcrumbs-link" ng-if="newCountry.State==state.update">@Token.UpdateCountry</a>
                <!-- <span class="kt-subheader__breadcrumbs-link kt-subheader__breadcrumbs-link--active">Active link</span> -->
            </div>
        </div>

    </div>

    <!-- end:: Subheader -->
    
 
    <div class="kt-content  kt-grid__item kt-grid__item--fluid" >
        <div class="row">
            <div class="col-lg-12">
                <!--Countris-->
                <div class="kt-portlet">
                    <div class="kt-portlet__head">
                        <div class="kt-portlet__head-label">
                            <span class="kt-portlet__head-icon">
                                <i class="kt-font-brand flaticon-add"></i>
                            </span>
                            <h3 class="kt-portlet__head-title" ng-if="newCountry.State!=state.update">@Token.AddNewCountry</h3>
                            <h3 class="kt-portlet__head-title" ng-if="newCountry.State==state.update">@Token.UpdateCountry</h3>
                        </div>
                    </div>
                    <!--Country Form-->
                    <form novalidate name="addCountryFrm" class="kt-form kt-form--label-right"
                          ng-submit="countryOpration.saveChange(addCountryFrm)">
                        <div class="kt-portlet__body">
                            <!--R O W 1-->
                            <div class="form-group row">
                                <!--CountryNameAr-->
                                <label class="col-form-label col-lg-2">@Token.NameAr</label>
                                <div class="col-lg-4 form-group-sub">
                                    <input type="text" class="form-control input-disabled  " name="nameAr"
                                           ng-class="{'is-invalid':addCountryFrm.nameAr.$invalid&&countryFrmErrorSubmit}"
                                           ng-model="newCountry.NameAr" ng-required="true" ng-maxlength="50" maxlength="50">
                                    <!--Errors:NameAr-->
                                    <div class="error invalid-feedback" ng-if="addCountryFrm.nameAr.$error.required&&countryFrmErrorSubmit">@Token.FieldIsRequierd</div>
                                    <div class="error invalid-feedback" ng-if="addCountryFrm.nameAr.$error.maxlength&&countryFrmErrorSubmit">@Token.MaxLengthCharIs 50</div>
                                </div>

                                <!--CountryNameEn-->
                                <label class="col-form-label col-lg-2">@Token.NameEn</label>
                                <div class="col-lg-4 form-group-sub">
                                    <input type="text" class="form-control input-disabled" name="nameEn"
                                           ng-class="{'is-invalid':addCountryFrm.nameEn.$invalid&&countryFrmErrorSubmit}"
                                           ng-model="newCountry.NameEn" ng-required="true" ng-maxlength="50"  maxlength="50">
                                    <!--Errors:NameEn-->
                                    <div class="error invalid-feedback" ng-if="addCountryFrm.nameEn.$error.required&&countryFrmErrorSubmit">@Token.FieldIsRequierd</div>
                                    <div class="error invalid-feedback" ng-if="addCountryFrm.nameEn.$error.maxlength&&countryFrmErrorSubmit">@Token.MaxLengthCharIs 50</div>
                                </div>
                            </div>
                            <!--R O W 2-->
                            <div class="form-group  row">
                                <!--IsoCode-->
                                <label class="col-form-label col-lg-2">@Token.IsoCode</label>
                                <div class="col-lg-4 form-group-sub">
                                    <input type="text" class="form-control input-disabled" name="isoCode"
                                           ng-class="{'is-invalid':addCountryFrm.isoCode.$invalid&&countryFrmErrorSubmit}"
                                           ng-model="newCountry.IsoCode" ng-required="true" ng-maxlength="50" maxlength="50">
                                    <!--Errors:NameEn-->
                                    <div class="error invalid-feedback" ng-if="addCountryFrm.isoCode.$error.required&&countryFrmErrorSubmit">@Token.FieldIsRequierd</div>
                                    <div class="error invalid-feedback" ng-if="addCountryFrm.isoCode.$error.maxlength&&countryFrmErrorSubmit">@Token.MaxLengthCharIs 50</div>
                                </div>
                            </div>
                        </div>
                        <div class="kt-portlet__foot">
                            <div class="kt-form__actions">
                                <div class="row">
                                    <div class="col-lg-9"></div>
                                    <div class="col-lg-3">
                                        @if (Priv.CanEdit)
                                        {

                                            <button type="submit" class="btn btn-brand btn-elevate btn-elevate-air"
                                                    ng-if="newCountry.State==state.update">
                                                <i class="la la-save">@Token.Save</i>
                                            </button>
                                        }
                                        @if (Priv.CanAdd)
                                        {
                                            <button type="submit" class="btn btn-brand btn-elevate btn-elevate-air"
                                                     ng-if="newCountry.State!=state.update">
                                                <i class="la la-save">@Token.Add</i>
                                            </button>

                                        }
                                        <button type="reset" class="btn btn-warning btn-elevate btn-elevate-air" ng-if="newCountry.State!=state.update"><i class="la la-file">@Token.Cancel</i></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <!--Cities-->
                <div class="kt-portlet">
                    <div class="kt-portlet__head">
                        <div class="kt-portlet__head-label">
                            <h3 class="kt-portlet__head-title" >@Token.Cities</h3>
                        </div>
                    </div>

                    <!--City Form-->
                    <form novalidate name="addCityFrm" ng-if="newCountry.State==state.update">
                        <!--Country Items-->
                        <div class="kt-portlet__body">

                            <div class="form-group  row">
                                <table class="table sms-table">
                                    <thead>
                                        <tr role="row">
                                            <th class="th-45 ">
                                                <label class="sms-sort-field">
                                                @Token.NameAr
                                                </label>
                                            </th>
                                            <th class="th-45">
                                                <label class="sms-sort-field">
                                                    @Token.NameEn
                                                </label>
                                            </th>
                                            <th class="th-10">
                                                <label class="sms-sort-field">
                                                    @Token.Operations
                                                </label>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <!--Create-->
                                        @if (Priv.CanAdd)
                                        {
                                            <tr>
                                                <td>
                                                    <input type="text" class="form-control input-disabled"
                                                           ng-model="newCity.NameAr">
                                                    <!--Errors:NameAr-->
                                                    <div>
                                                        <small class="help-block" ng-if="newCity.NameArIsRequired&&propertyIsFalthy(newCity.NameAr,newCity.NameArIsRequired)&&erroAddNewItem">@Token.FieldIsRequierd</small>
                                                        <small class="help-block" ng-if="newCity.NameArIsMaxlength||propertyIsMaxLength(newCity.NameAr,50)&&erroAddNewItem">@Token.MaxLengthCharIs 50</small>
                                                    </div>
                                                </td>
                                                <td>
                                                    <input type="text" class="form-control input-disabled"
                                                           ng-model="newCity.NameEn">
                                                    <!--Errors:NameAr-->
                                                    <div>
                                                        <small class="help-block" ng-if="newCity.NameEnIsRequired&&propertyIsFalthy(newCity.NameEn,newCity.NameEnIsRequired)&&erroAddNewItem">@Token.FieldIsRequierd</small>
                                                        <small class="help-block" ng-if="newCity.NameEnIsMaxlength||propertyIsMaxLength(newCity.NameEn,50)&&erroAddNewItem">@Token.MaxLengthCharIs 50</small>
                                                    </div>
                                                </td>
                                                <td>
                                                    <!--Btn:Added New-->
                                                    <a href="javascript:void(0);" data-skin="dark" data-toggle="kt-tooltip" data-placement="top"  title="@Token.Add"
                                                       class="btn btn-sm btn-clean btn-icon btn-icon-md"  ng-click="countryItemOpration.addNew(newCity,newCountry)"><i class="la la-plus-square"></i></a>

                                                    <!--Btn:Cancel-->
                                                    <a href="javascript:void(0);" data-skin="dark" data-toggle="kt-tooltip" data-placement="top"  title="@Token.Cancel"
                                                       class="btn btn-sm btn-clean btn-icon btn-icon-md" ng-click="newCity={};erroAddNewItem=false"><i class="la la-undo"></i></a>

                                                </td>
                                            </tr>
                                        }
                                        <tr ng-repeat="gp in newCountry.Cities">
                                            <td>
                                                <input type="text" class="form-control input-disabled" ng-model="gp.NameAr" ng-disabled="gp.Id!=itemEditId">
                                                <!--Errors:NameAr-->
                                                <div>
                                                    <small class="help-block" ng-if="propertyIsFalthy(gp.NameAr)">@Token.FieldIsRequierd</small>
                                                    <small class="help-block" ng-if="propertyIsMaxLength(gp.NameAr,50)">@Token.MaxLengthCharIs 50</small>
                                                </div>
                                            </td>
                                            <td>
                                                <input type="text" class="form-control input-disabled" ng-model="gp.NameEn" ng-disabled="gp.Id!=itemEditId">
                                                <!--Errors:NameEn-->
                                                <div>
                                                    <small class="help-block" ng-if="propertyIsFalthy(gp.NameEn)">@Token.FieldIsRequierd</small>
                                                    <small class="help-block" ng-if="propertyIsMaxLength(gp.NameEn,50)">@Token.MaxLengthCharIs 50</small>
                                                </div>
                                            </td>
                                            <td>
                                                <!--Btn:Edit-->
                                                @if (Priv.CanEdit)
                                                {
                                                <!--Btn:Edit-->
                                                    <a href="javascript:void(0);" ng-click="countryItemOpration.changeEdit(gp)" ng-if="gp.Id!=itemEditId" data-skin="dark" data-toggle="kt-tooltip" data-placement="top"  title="@Token.Update" class="btn btn-sm btn-clean btn-icon btn-icon-md"><i class="la la-edit"></i></a>
																<!--Btn:Save-->
                                                    <a href="javascript:void(0);" ng-click="countryItemOpration.saveEdit(gp)" ng-if="gp.Id==itemEditId" data-skin="dark" data-toggle="kt-tooltip" data-placement="top" title="@Token.Save" class="btn btn-sm btn-clean btn-icon btn-icon-md"><i class="la la-save"></i></a>
																<!--Btn:Cancel-->
                                                    <a href="javascript:void(0);" ng-click="countryItemOpration.cancelEdit( )" ng-if="gp.Id==itemEditId" data-skin="dark" data-toggle="kt-tooltip" data-placement="top"  title="@Token.Cancel" class="btn btn-sm btn-clean btn-icon btn-icon-md"><i class="la la-undo"></i></a>
                                                }
                                                <!--Btn:Delete-->
                                                @if (Priv.CanDelete)
                                                {
                                                    <a href="javascript:void(0);" ng-click="countryItemOpration.delete(gp)" ng-if="gp.Id!=itemEditId" data-skin="dark" data-toggle="kt-tooltip" data-placement="top"  title="@Token.Delete" class="btn btn-sm btn-clean btn-icon btn-icon-md"><i class="la la-trash"></i> </a>
                                                }
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </form>
                </div>


            </div>
        </div>
    </div>

</div>
@section scripts{
    <!--(ANageeb) link angualr files for thsis  view -->
<script src="~/Scripts/angularJS/views/countries/addAndUpdate/service.js"></script>
    <script src="~/Scripts/angularJS/views/countries/addAndUpdate/contoller.js"></script>
}