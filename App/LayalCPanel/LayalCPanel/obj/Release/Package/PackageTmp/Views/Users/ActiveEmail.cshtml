@{
    ViewBag.Title = Token.ActiveEmail;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor" ng-controller="usersCtrl">
    <!-- begin:: Subheader -->
    <div class="kt-subheader   kt-grid__item" id="kt_subheader">
        <div class="kt-subheader__main">
            <span class="kt-subheader__separator kt-hidden"></span>
            <div class="kt-subheader__breadcrumbs">
                <a href="~/Home/Index" class="kt-subheader__breadcrumbs-home"><i class="flaticon-home"></i></a>

                <span class="kt-subheader__breadcrumbs-separator"></span>
                <a href="~/Home/Index" class="kt-subheader__breadcrumbs-link"> @Token.HomePage </a>

                <span class="kt-subheader__breadcrumbs-separator"></span>
                <a href="~/Users" class="kt-subheader__breadcrumbs-link"> @Token.Users </a>


                <span class="kt-subheader__breadcrumbs-separator"></span>
                <a href="javascript:void(0)" class="kt-subheader__breadcrumbs-link">@Token.ActiveEmail</a>

                <!-- <span class="kt-subheader__breadcrumbs-link kt-subheader__breadcrumbs-link--active">Active link</span> -->
            </div>
        </div>

    </div>
    <!-- end:: Subheader -->
    <div class="kt-content  kt-grid__item kt-grid__item--fluid">
        <div class="row">
            <div class="col-lg-12">
                <!--AddUser-->
                <div class="kt-portlet">
                    <disv class="kt-portlet__head">
                        <div class="kt-portlet__head-label">
                            <span class="kt-portlet__head-icon">
                                <i class="kt-font-brand flaticon-add"></i>
                            </span>
                            <h3 class="kt-portlet__head-title">@Token.ActiveEmail</h3>
                        </div>
                    </disv>
                    <!--AddUser Form-->
                    <form novalidate name="userFrm" class="kt-form kt-form--label-right" ng-submit="saveChange(userFrm,User)">
                        <div class="kt-portlet__body">
                            <!--R O W 1-->
                            <div class="form-group  row">
                                <!--Email-->
                                <label class="col-form-label col-lg-2">@Token.Email</label>
                                <div class="col-lg-4 form-group-sub">
                                    <input type="email"
                                           name="email"
                                           ng-class="{'is-invalid':userFrm.email.$invalid&&userFormSubmitErro}"
                                           class="form-control"
                                           ng-model="user.Email"
                                           ng-required="true" />
                                    <!--Errors:-->
                                    <small class="error invalid-feedback" ng-if="userFrm.email.$invalid&&userFormSubmitErro">@Token.FieldIsRequierd</small>

                                </div>
                                <!--ActiveCode-->
                                <label class="col-form-label col-lg-2" ng-show="allowActiveCode">@Token.ActiveCode</label>
                                <div class="col-lg-4 form-group-sub" ng-show="allowActiveCode">
                                    <input type="text"
                                           name="activeCode"
                                           ng-class="{'is-invalid':userFrm.activeCode.$invalid&&userFormSubmitErro}"
                                           class="form-control"
                                           ng-model="user.ActiveCode"
                                         ng-required="allowActiveCode"  />
                                    <!--Errors:-->
                                    <small class="error invalid-feedback" ng-if="userFrm.activeCode.$invalid&&userFormSubmitErro">@Token.InvalidData</small>
                                </div>

                            </div>

                        </div>
                        <div class="kt-portlet__foot">
                            <div class="kt-form__actions">
                                <div class="row">
                                    <div class="col-lg-9"></div>
                                    <div class="col-lg-3">
                                        <button type="button" class="btn btn-brand btn-elevate btn-elevate-air"
                                                ng-if="!allowActiveCode"
                                                ng-click="sendActiveCodeToEmail(userFrm)">
                                            <i class="la la-save">@Token.SendActiveCodeToEmail</i>
                                        </button>

                                        <button type="button" class="btn btn-brand btn-elevate btn-elevate-air"
                                                ng-if="allowActiveCode"
                                                ng-click="activeEmail(userFrm)">

                                            <i class="la la-save">@Token.ActiveEmail</i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>

                <!--end::Portlet-->
            </div>
        </div>
    </div>

</div>
@section scripts{
    <!--(ANageeb) link angualr files for thsis  view -->
    <script src="~/Scripts/angularJS/views/users/activeEmail/service.js"></script>
    <script src="~/Scripts/angularJS/views/users/activeEmail/contoller.js"></script>
}