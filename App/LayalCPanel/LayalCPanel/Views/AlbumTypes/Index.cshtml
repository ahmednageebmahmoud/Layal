
@{
    ViewBag.Title = Token.AlbumTypes;
    Layout = "~/Views/Shared/_Layout.cshtml";
    UsersPrivilegeVM Priv = new UsersPrivilegesBLL().SelectByUserId(PagesEnum.AlbumTypes);
}

<!-- begin:: Content Head -->
<div class="kt-subheader   kt-grid__item" id="kt_subheader">
    <div class="kt-subheader__main">

        <span class="kt-subheader__separator kt-hidden"></span>
        <div class="kt-subheader__breadcrumbs">
            <a href="~/Home/Index" class="kt-subheader__breadcrumbs-home"><i class="flaticon-home"></i></a>
            <span class="kt-subheader__breadcrumbs-separator"></span>
            <a href="~/Home/Index" class="kt-subheader__breadcrumbs-link">
                @Token.HomePage
            </a>

            <span class="kt-subheader__breadcrumbs-separator"></span>
            <a href="javascript:void(0)" class="kt-subheader__breadcrumbs-link">
                @Token.AlbumTypes
            </a>

            <!-- <span class="kt-subheader__breadcrumbs-link kt-subheader__breadcrumbs-link--active">Active link</span> -->
        </div>
    </div>

</div>

<!-- end:: Content Head -->
<!--Page Body-->
<div ng-controller="albumTypesCtrl">
    <div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content">
        <div class="kt-portlet kt-portlet--mobile">
            <div class="kt-portlet__head kt-portlet__head--lg">
                <div class="kt-portlet__head-label">
                    <span class="kt-portlet__head-icon">
                        <i class="kt-font-brand flaticon-list-1"></i>
                    </span>
                    <h3 class="kt-portlet__head-title">
                        @Token.AddAlbumType
                    </h3>
                </div>

            </div>

            <!--Create-->
            @if (Priv.CanAdd)
            {
                <div class="kt-portlet__body">
                    <form novalidate name="addAlbumTypeFrm" class="kt-form kt-form--label-right" ng-submit="addNew(addAlbumTypeFrm)">
                        <div class="kt-portlet__body">

                            <!--R O W 1-->
                            <div class="form-group  row">
                                <!--NameAr-->
                                <label class="col-lg-2 col-form-label">@Token.NameAr</label>
                                <div class="col-lg-4 form-group-sub">
                                    <input type="text" class="form-control input-disabled"
                                           name="nameAr"
                                           ng-class="{'is-invalid':addAlbumTypeFrm.nameAr.$invalid&&albumTypeFrmErrorSubmit}"
                                           ng-model="newAlbumType.NameAr"
                                           ng-required="true" maxlength="50" ng-maxlength="50" />

                                    <!--Errors:NameAr-->
                                    <div class="error invalid-feedback" ng-if="addAlbumTypeFrm.nameAr.$error.required&&albumTypeFrmErrorSubmit">@Token.FieldIsRequierd</div>
                                    <div class="error invalid-feedback" ng-if="addAlbumTypeFrm.nameAr.$error.maxlength&&albumTypeFrmErrorSubmit">@Token.MaxLengthCharIs 50</div>
                                </div>

                                <!--NameEn-->
                                <label class="col-lg-2 col-form-label">@Token.NameEn</label>
                                <div class="col-lg-4 form-group-sub">
                                    <input type="text"
                                           class="form-control input-disabled"
                                           name="nameEn"
                                           ng-class="{'is-invalid':addAlbumTypeFrm.nameEn.$invalid&&albumTypeFrmErrorSubmit}"
                                           ng-model="newAlbumType.NameEn"
                                           ng-required="true" maxlength="50" ng-maxlength="50" />
                                    <!--Errors:NameEn-->
                                    <div class="error invalid-feedback" ng-if="addAlbumTypeFrm.nameEn.$error.required&&albumTypeFrmErrorSubmit">@Token.FieldIsRequierd</div>
                                    <div class="error invalid-feedback" ng-if="addAlbumTypeFrm.nameEn.$error.maxlength&&albumTypeFrmErrorSubmit">@Token.MaxLengthCharIs 50</div>
                                </div>
                            </div>
                            <!--R O W 4-->
                            <div class="kt-portlet__foot">
                                <div class="kt-form__actions">
                                    <div class="row">
                                        <div class="col-lg-9"></div>
                                        <div class="col-lg-3">
                                            @if (Priv.CanAdd)
                                            {
                                                <button type="submit" class="btn btn-brand btn-elevate btn-elevate-air">
                                                    <i class="la la-save">@Token.Add</i>
                                                </button>
                                            }
                                            <button type="reset" class="btn btn-warning btn-elevate btn-elevate-air" ng-if="enquiry.State!=state.update" ng-click="reSelect()"><i class="la la-file">@Token.Cancel</i></button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            }
        </div>
        <div class="kt-portlet kt-portlet--mobile">
            <div class="kt-portlet__head kt-portlet__head--lg">
                <div class="kt-portlet__head-label">
                    <span class="kt-portlet__head-icon">
                        <i class="kt-font-brand flaticon-list-1"></i>
                    </span>
                    <h3 class="kt-portlet__head-title">
                        @Token.AlbumTypes
                    </h3>
                </div>

            </div>
            <div class="kt-portlet__body">
                <div class="kt-portlet__body">



                    @if (Priv.CanDisplay)
                    {
                        <!--SMS Print,Excel,PDF,Search,....-->
                        <sms-buttons-search ng-sms-tableid="ng_table_1" ng-sms-search-model="itemSearch"></sms-buttons-search>
                        <table class="table sms-table " id="ng_table_1">
                            <thead>
                                <tr>
                                    <th class="th-40 ">
                                        <sms-sort ng-sms-fop="albumTypeFOP"
                                                  ng-sms-field-name="NameAr"
                                                  ng-sms-resource="@Token.NameAr"></sms-sort>
                                    </th>
                                    <th class="th-45 ">
                                        <sms-sort ng-sms-fop="albumTypeFOP"
                                                  ng-sms-field-name="NameEn"
                                                  ng-sms-resource="@Token.NameEn"></sms-sort>
                                    </th>
                                    <th class="th-15">
                                        @Token.Operations
                                    </th>
                                </tr>
                            </thead>
                            <tbody>

                                <tr ng-repeat="x in albumTypes|customFilter:itemSearch:albumTypeFOP:'albumTypeFOP':this  |orderBy:albumTypeFOP.sort.propName:albumTypeFOP.sort.reverse | limitTo:albumTypeFOP.paging.pagingLimt.take:albumTypeFOP.paging.pagingLimt.skip track by $index"
                                    ng-class="{'kt-datatable__row--even':$index%2==0}">

                                    <td>
                                        <input type="text"
                                               class="form-control input-disabled"
                                               placeholder="@Token.NameAr"
                                               ng-model="x.NameAr" ng-disabled="x.Id!=itemEditId" />
                                        <!--Errors:NameAr-->
                                        <div>
                                            <small class="help-block" ng-if="propertyIsFalthy(x.NameAr)">@Token.FieldIsRequierd</small>
                                            <small class="help-block" ng-if="propertyIsMaxLength(x.NameAr,50)">@Token.MaxLengthCharIs 50</small>
                                        </div>
                                    </td>
                                    <td>
                                        <input type="text" class="form-control input-disabled"
                                               placeholder="@Token.NameEn"
                                               ng-model="x.NameEn" ng-disabled="x.Id!=itemEditId" />

                                        <!--Errors:NameEn-->
                                        <div>
                                            <small class="help-block" ng-if="propertyIsFalthy(x.NameEn)">@Token.FieldIsRequierd</small>
                                            <small class="help-block" ng-if="propertyIsMaxLength(x.NameEn,50)">@Token.MaxLengthCharIs 50</small>
                                        </div>
                                    </td>
                                    <td>
                                        <!--Btn:Edit-->
                                        @if (Priv.CanEdit)
                                        {
                                                <!--Btn:Edit-->
                                            <a href="javascript:void(0);" ng-click="changeEdit(x)" ng-if="x.Id!=itemEditId"  title="@Token.Update" class="btn btn-sm btn-clean btn-icon btn-icon-md"><i class="la la-edit"></i></a>
																<!--Btn:Save-->
                                            <a href="javascript:void(0);" ng-click="saveEdit(x)" ng-if="x.Id==itemEditId"  title="@Token.Save" class="btn btn-sm btn-clean btn-icon btn-icon-md"><i class="la la-save"></i></a>
																<!--Btn:Cancel-->
                                            <a href="javascript:void(0);" ng-click="cancelEdit( )" ng-if="x.Id==itemEditId"  title="@Token.Cancel" class="btn btn-sm btn-clean btn-icon btn-icon-md"><i class="la la-undo"></i></a>
                                        }
                                        <!--Btn:Delete-->
                                        @if (Priv.CanDelete)
                                        {
                                            <a href="javascript:void(0);" ng-click="delete(x)" ng-if="x.Id!=itemEditId"  title="@Token.Delete" class="btn btn-sm btn-clean btn-icon btn-icon-md"><i class="la la-trash"></i> </a>
                                        }
                                    </td>
                                </tr>


                            </tbody>
                        </table>

                             <!--Paging -->
                        <sms-paging-select ng-sms-fop="albumTypeFOP"></sms-paging-select>
                        <sms-paging ng-sms-fop="albumTypeFOP" ng-sms-display-m-func="getAlbumTypes()"></sms-paging>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <!--(ANageeb) link angualr files for thsis  view -->
    <script src="~/Scripts/angularJS/views/albumTypes/index/service.js"></script>
    <script src="~/Scripts/angularJS/views/albumTypes/index/contoller.js"></script>
}