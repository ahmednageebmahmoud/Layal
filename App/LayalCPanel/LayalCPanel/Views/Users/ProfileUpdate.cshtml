@{
    ViewBag.Title = Token.ProfileUpdate;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor" ng-controller="usersCtrl">
    <!-- begin:: Subheader -->
    <div class="kt-subheader   kt-grid__item" id="kt_subheader">
        <div class="kt-subheader__main">
            <span class="kt-subheader__separator kt-hidden"></span>
            <div class="kt-subheader__breadcrumbs">
                <a href="~/Home/Index" class="kt-subheader__breadcrumbs-home"><i class="flaticon-home"></i></a>

                <span class="kt-subheader__breadcrumbs-separator"></span>
                <a href="~/Home/Index" class="kt-subheader__breadcrumbs-link"> @Token.HomePage </a>

                <span class="kt-subheader__breadcrumbs-separator"></span>
                <a href="~/Users" class="kt-subheader__breadcrumbs-link"> @Token.Users </a>


                <span class="kt-subheader__breadcrumbs-separator"></span>

                <a href="javascript:void(0)" class="kt-subheader__breadcrumbs-link kt-subheader__breadcrumbs-link--active">@Token.ProfileUpdate</a>

            </div>
        </div>

    </div>
    <!-- end:: Subheader -->
    <div class="kt-content  kt-grid__item kt-grid__item--fluid">
        <div class="row">
            <div class="col-lg-12">
                <!--AddUser-->
                <div class="kt-portlet">
                    <div class="kt-portlet__head">
                        <div class="kt-portlet__head-label">
                            <span class="kt-portlet__head-icon">
                                <i class="kt-font-brand flaticon-add"></i>
                            </span>
                            <h3 class="kt-portlet__head-title">@Token.ProfileUpdate</h3>
                        </div>

                    </div>
                    <!--AddUser Form-->
                    <form novalidate name="userFrm" class="kt-form kt-form--label-right" ng-submit="saveChange(userFrm,User)">
                        <div class="kt-portlet__body">
                            <!--R O W 1-->
                            <div class="form-group  row">
                                <!--UerName-->
                                <label class="col-form-label col-lg-2">@Token.UserName</label>
                                <div class="col-lg-4 form-group-sub">
                                    <input type="text"
                                           name="userName"
                                           class="form-control"
                                           ng-class="{'is-invalid':userFrm.userName.$invalid&&userFormSubmitErro}"
                                           ng-model="user.UserName"
                                           maxlength="50"
                                           ng-required="true" />

                                    <!--Errors:-->
                                    <small class="error invalid-feedback" ng-if="userFrm.userName.$error.required&&userFormSubmitErro">@Token.FieldIsRequierd</small>
                                    <small class="error invalid-feedback" ng-if="userFrm.userName.$invalid&&!userFrm.userName.$error.required&&userFormSubmitErro">@Token.InvalidData</small>
                                </div>
                                <!--password-->
                                <label class="col-form-label col-lg-2">@Token.Password</label>
                                <div class="col-lg-4 form-group-sub">
                                    <input type="password"
                                           name="password"
                                           class="form-control"
                                           ng-class="{'is-invalid':userFrm.password.$invalid&&userFormSubmitErro}"
                                           ng-model="user.Password"
                                           maxlength="50"
                                           pattern="\w{6,50}"
                                           ng-required="user.State==state.Create"
                                           autocomplete="off" />

                                    <!--Errors:-->
                                    <small class="error invalid-feedback" ng-if="userFrm.password.$error.required&&userFormSubmitErro">@Token.FieldIsRequierd</small>
                                    <small class="error invalid-feedback" ng-if="userFrm.password.$invalid&&!userFrm.password.$error.pattern&&!userFrm.password.$error.required&&userFormSubmitErro">@Token.InvalidData</small>
                                    <small class="error invalid-feedback" ng-if="userFrm.password.$error.pattern&&userFormSubmitErro">@Token.MinLengthCharIs 6</small>
                                </div>
                            </div>

                            <!--R O W 2-->
                            <div class="form-group  row">
                                <!--Email-->
                                <label class="col-form-label col-lg-2">@Token.Email</label>
                                <div class="col-lg-4 form-group-sub">
                                    <input type="email"
                                           name="email"
                                           ng-class="{'is-invalid':userFrm.email.$invalid&&userFormSubmitErro}"
                                           class="form-control"
                                           maxlength="50"
                                           ng-model="user.Email"
                                           ng-change="allowActiveCode=!(OldMail!=user.Email)"
                                           ng-disabled="disapledEmail" />
                                    <!--Errors:-->
                                    <small class="error invalid-feedback" ng-if="userFrm.email.$invalid&&!userFrm.email.$error.required&&userFormSubmitErro">@Token.InvalidData</small>

                                </div>
                                <!--PhoneNumber-->
                                <label class="col-form-label col-lg-2">@Token.PhoneNumber</label>
                                <div class="col-lg-4 form-group-sub">
                                    <input type="text"
                                           name="phoneNo"
                                           ng-class="{'is-invalid':userFrm.phoneNo.$invalid&&userFormSubmitErro}"
                                           class="form-control"
                                           ng-model="user.PhoneNo"
                                           pattern="[0-9]{1,14}" />
                                    <!--Errors:-->
                                    <small class="error invalid-feedback" ng-if="userFrm.phoneNumber.$invalid&&userFormSubmitErro">@Token.InvalidData</small>
                                </div>

                            </div>

                            <!--R O W 3-->
                            <div class="form-group  row">
                                <!--Address-->
                                <label class="col-form-label col-lg-2">@Token.Address</label>
                                <div class="form-group-sub col-lg-4">
                                    <textarea type="text"
                                              name="address"
                                              ng-class="{'is-invalid':userFrm.address.$invalid&&userFormSubmitErro}"
                                              class="form-control "
                                              ng-model="user.Address"
                                              rows="3"
                                              maxlength="250"></textarea>
                                    <!--Errors:-->
                                    <small class="error invalid-feedback" ng-if="userFrm.address.$invalid&&!userFrm.address.$error.required&&userFormSubmitErro">@Token.InvalidData</small>
                                </div>

                                <!--DateOfBirth-->
                                <label class="col-form-label col-lg-2">@Token.DateOfBirth</label>
                                <div class="form-group-sub col-lg-4">
                                    <input type="date"
                                           name="dateOfBirth"
                                           ng-class="{'is-invalid':userFrm.dateOfBirth.$invalid&&userFormSubmitErro}"
                                           class="form-control "
                                           ng-model="user.DateOfBirth" />
                                    <!--Errors:-->
                                    <small class="error invalid-feedback" ng-if="userFrm.dateOfBirth.$invalid&&userFormSubmitErro">@Token.InvalidData</small>
                                </div>
                            </div>

                            <!--R O W 4-->
                            <div class="form-group  row">
                                <!--Country-->
                                <label class="col-form-label col-lg-2">@Token.Country</label>
                                <div class="col-lg-4 form-group-sub">
                                    <select class="form-control"
                                            serchbale
                                            name="country"
                                            ng-class="{'is-invalid':userFrm.emp.$invalid&&userFormSubmitErro}"
                                            ng-model="user.CountryId"
                                            ng-options="c.Id as c.CountryName for c in countries"></select>
                                    <!--Errors:-->
                                    <small class="error invalid-feedback" ng-if="userFrm.country.$invalid&&!userFrm.country.$error.required&&userFormSubmitErro">@Token.InvalidData</small>
                                </div>
                                <!--City-->
                                <label class="col-form-label col-lg-2">@Token.City</label>
                                <div class="col-lg-4 form-group-sub">
                                    <select class="form-control"
                                            serchbale
                                            name="city"
                                            ng-class="{'is-invalid':userFrm.emp.$invalid&&userFormSubmitErro}"
                                            ng-model="user.CityId"
                                            ng-options="c.Id as c.CityName for c in cities|filterWithoutStaticItems:{'CountryId':user.CountryId}"></select>
                                    <!--Errors:-->
                                    <small class="error invalid-feedback" ng-if="userFrm.city.$invalid&&!userFrm.city.$error.required&&userFormSubmitErro">@Token.InvalidData</small>
                                </div>
                            </div>
                            <!--R O W 5-->
                            <div class="form-group  row">
                                <!--Language-->
                                <label class="col-form-label col-lg-2">@Token.Language</label>
                                <div class="col-lg-4 form-group-sub">
                                    <select class="form-control"
                                            serchbale
                                            name="language"
                                            ng-class="{'is-invalid':userFrm.language.$invalid&&userFormSubmitErro}"
                                            ng-model="user.LanguageId"
                                            ng-options="c.Id as c.LanguageName for c in languages"
                                            ng-required="true"></select>
                                    <!--Errors:-->
                                    <small class="error invalid-feedback" ng-if="userFrm.language.$error.required&&userFormSubmitErro">@Token.FieldIsRequierd</small>
                                    <small class="error invalid-feedback" ng-if="userFrm.language.$invalid&&!userFrm.language.$error.required&&userFormSubmitErro">@Token.InvalidData</small>
                                </div>
                                <!--DateOfBirth-->
                                <label class="col-form-label col-lg-2">@Token.DateOfBirth</label>
                                <div class="form-group-sub  col-lg-4">
                                    <input type="date"
                                           name="dateOfBirth"
                                           ng-class="{'is-invalid':userFrm.dateOfBirth.$invalid&&userFormSubmitErro}"
                                           class="form-control "
                                           ng-model="user.DateOfBirth" />
                                    <!--Errors:-->
                                    <small class="error invalid-feedback" ng-if="userFrm.dateOfBirth.$invalid&&userFormSubmitErro">@Token.InvalidData</small>
                                </div>
                            </div>
                        </div>
                        <div class="form-group  row">

                            <!--ActiveCode-->
                            <label class="col-form-label col-lg-2" ng-if="disapledEmail">@Token.ActiveCode</label>
                            <div class="form-group-sub col-lg-4" ng-if="disapledEmail">
                                <input type="text"
                                       class="form-control "
                                       name="activCode"
                                       ng-model="user.ActiveCode" 
                                       ng-required="true"/>
                                <small class="error invalid-feedback" ng-if="userFrm.activCode.$error.required&&userFormSubmitErro">@Token.FieldIsRequierd</small>

                            </div>
                        </div>
                        <div class="kt-portlet__foot">
                            <div class="kt-form__actions">
                                <div class="row">
                                    <div ng-class="{'col-lg-8':!allowActiveCode||disapledEmail,'col-lg-9':allowActiveCode&&!disapledEmail}"></div>
                                    <div ng-class="{'col-lg-4':!allowActiveCode||disapledEmail,'col-lg-3':allowActiveCode&&!disapledEmail}">
                                        <button type="button" class="btn btn-brand btn-elevate btn-elevate-air"
                                                ng-if="!allowActiveCode&&!disapledEmail"
                                                ng-click="sendActiveCodeToEmail(userFrm)">
                                            <i class="la la-save">@Token.SendActiveCodeToEmail</i>
                                        </button>

                                        <button type="submit" class="btn btn-brand btn-elevate btn-elevate-air"
                                                ng-if="allowActiveCode||disapledEmail"
                                                ng-click="activeEmail(userFrm)">

                                            <i class="la la-save">@Token.Save</i>
                                        </button>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

                <!--end::Portlet-->
            </div>
        </div>
    </div>




@section scripts{
    <!--(ANageeb) link angualr files for thsis  view -->
    <script src="~/Scripts/angularJS/views/users/profileUpdate/service.js"></script>
    <script src="~/Scripts/angularJS/views/users/profileUpdate/contoller.js"></script>
}