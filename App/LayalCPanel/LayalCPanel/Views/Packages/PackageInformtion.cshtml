
@{
    ViewBag.Title = Token.PackageInformation;
    Layout = "~/Views/Shared/_Layout.cshtml";
    UsersPrivilegeVM Priv =
        new UsersPrivilegesBLL().SelectByUserId(PagesEnum.Packages);

}
<div class="kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor" ng-controller="addAUpdatePackagesCtrl">
    <!-- begin:: Subheader -->
    <div class="kt-subheader   kt-grid__item" id="kt_subheader">
        <div class="kt-subheader__main">
            <span class="kt-subheader__separator kt-hidden"></span>
            <div class="kt-subheader__breadcrumbs">
                <a href="~/Home/Index" class="kt-subheader__breadcrumbs-home"><i class="flaticon-home"></i></a>

                <span class="kt-subheader__breadcrumbs-separator"></span>
                <a href="~/Home/Index" class="kt-subheader__breadcrumbs-link"> @Token.HomePage </a>

                <span class="kt-subheader__breadcrumbs-separator"></span>
                <a href="~/Packages" class="kt-subheader__breadcrumbs-link"> @Token.Packages </a>


                <span class="kt-subheader__breadcrumbs-separator"></span>
                <a href="javascript:void(0)" class="kt-subheader__breadcrumbs-link">@Token.PackageInformation</a>
                <!-- <span class="kt-subheader__breadcrumbs-link kt-subheader__breadcrumbs-link--active">Active link</span> -->
            </div>
        </div>

    </div>

    <!-- end:: Subheader -->


    <div class="kt-content  kt-grid__item kt-grid__item--fluid">
        <div class="row">
            <div class="col-lg-12">
                <!--Package-->
                <div class="kt-portlet">
                    <div class="kt-portlet__head">
                        <div class="kt-portlet__head-label">
                            <span class="kt-portlet__head-icon">
                                <i class="kt-font-brand flaticon-add"></i>
                            </span>
                            <h3 class="kt-portlet__head-title" ng-if="newPackage.State!=state.update">@Token.PackageInformation</h3>
                        </div>
                    </div>
                    <!--Package Form-->
                    <form novalidate name="addPackageFrm" class="kt-form kt-form--label-right"
                          ng-submit="packageOpration.saveChange(addPackageFrm)">
                        <div class="kt-portlet__body">
                            <!--R O W 1-->
                            <div class="form-group row">
                                <!--PackageName-->
                                <label class="col-form-label col-lg-2">@Token.NameAr</label>
                                <div class="col-lg-4 form-group-sub">
                                    <input type="text" class="form-control input-disabled  " name="nameAr"
                                           ng-model="newPackage.PackageName" ng-disabled="true">
                                </div>

                                <!--Description-->
                                <label class="col-form-label col-lg-2">@Token.Description</label>
                                <div class="col-lg-4 form-group-sub">
                                    <textarea class="form-control input-disabled "
                                              name="descriptionAr"
                                              ng-model="newPackage.DescriptionName"
                                              ng-disabled="true"></textarea>
                                </div>
                            </div>

                            <!--R O W 2-->
                            <div class="form-group row">
                                <!--Album-->
                                <label class="col-form-label col-lg-2">@Token.Album</label>
                                <div class="col-lg-4 form-group-sub">
                                    <select class="form-control input-disabled "
                                            ng-model="newPackage.AlbumTypeId"
                                            ng-options="c.Id as c.AlbumTypeName for c in albumsTypes"
                                            ng-disabled="true"></select>
                                </div>

                                <!--IsAllowPrintNames-->
                                <label class="col-form-label col-lg-2">@Token.IsAllowPrintNames</label>
                                <div class="col-lg-4 form-group-sub">
                                    <span class="kt-switch kt-switch--outline kt-switch--icon kt-switch--success">
                                        <label>
                                            <input type="checkbox" checked="checked" disabled ng-model="newPackage.IsAllowPrintNames" name="" class="ng-pristine ng-untouched ng-valid ng-not-empty" />
                                            <span></span>
                                        </label>
                                    </span>
                                </div>
                            </div>

                            <!--R  W O 3-->
                            <div class="form-group row">
                                <label class="col-form-label col-lg-2">@Token.PackageDetails</label>
                                <div class="col-lg-10 form-group-sub">
                                    <table class="table sms-table">
                                        <thead>
                                            <tr role="row">
                                                <th class="th-30 ">
                                                    <label class="sms-sort-field">
                                                        @Token.Input
                                                    </label>
                                                </th>
                                                <th class="th-30">
                                                    <label class="sms-sort-field">
                                                        @Token.ValueAr
                                                    </label>
                                                </th>
                                                <th class="th-30">
                                                    <label class="sms-sort-field">
                                                        @Token.ValueEn
                                                    </label>
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="gp in newPackage.PackageDetails">
                                                <td>
                                                    <select class="form-control input-disabled"
                                                            ng-model="gp.PackageInputTypeId"
                                                            ng-options="c.Id as c.PackageInputTypeName for c in packageInputTypes"
                                                            ng-disabled="true"></select>
                                                </td>
                                                <td>
                                                    {{gp.ValueAr}}
                                                </td>
                                                <td>
                                                    {{gp.ValueEn}}
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>

                            </div>

                        </div>
                    </form>
                </div>

                <!--end::Portlet-->
            </div>
        </div>
    </div>

</div>
@section scripts{
    <!--(ANageeb) link angualr files for thsis  view -->
    <script src="~/Scripts/angularJS/views/packages/addAndUpdate/service.js"></script>
    <script src="~/Scripts/angularJS/views/packages/addAndUpdate/contoller.js"></script>
}